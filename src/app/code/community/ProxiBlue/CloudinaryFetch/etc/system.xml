<?xml version="1.0"?>
<config>
    <sections>
        <web translate="label" module="core">
            <groups>
                <cloudinary_fetch translate="label">
                    <label>Cloudinary URL Fetch</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>25</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label">
                            <label>Prefix media url with CDN url?</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <backend_model>adminhtml/system_config_backend_secure</backend_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                        <enabled_skin translate="label">
                            <label>Prefix skin images with CDN url?</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <backend_model>adminhtml/system_config_backend_secure</backend_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled_skin>
                        <base_url translate="label">
                            <label>Fetch URL</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>example: https://res.cloudinary.com/[your Cloudinary account cloud name]/image/upload/</comment>
                        </base_url>
                        <url_options translate="label">
                            <label>URL Options</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>example:f_auto,a_auto</comment>
                        </url_options>
                    </fields>
                </cloudinary_fetch>
            </groups>
        </web>
    </sections>
</config>
